# Azure AI Agent Service Configuration
# Copy this file to .env and fill in your actual values

# Azure AI Project Configuration
AZURE_AI_PROJECT_URL=https://your-project.cognitiveservices.azure.com/
AZURE_AI_API_KEY=your_api_key_here
AZURE_AI_MODEL_DEPLOYMENT=gpt-4o
AZURE_AI_RESOURCE_GROUP=your_resource_group
AZURE_AI_SUBSCRIPTION_ID=your_subscription_id

# Azure Authentication (alternative to API key)
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# MCP Server Endpoints (should match your local setup)
MCP_RAG_SERVER_URL=http://localhost:8000/mcp
MCP_WEBSEARCH_SERVER_URL=http://localhost:8001/mcp

# Agent Configuration
AZURE_AI_AGENT_NAME=corporate-actions-assistant
AZURE_AI_AGENT_VERSION=1.0.0

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8502
STREAMLIT_SERVER_ADDRESS=localhost
