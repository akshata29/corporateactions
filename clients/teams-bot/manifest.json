{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "corporate-actions-bot",
  "packageName": "com.corporateactions.teamsbot",
  "developer": {
    "name": "Corporate Actions Team",
    "websiteUrl": "https://www.corporateactions.com",
    "privacyUrl": "https://www.corporateactions.com/privacy",
    "termsOfUseUrl": "https://www.corporateactions.com/terms"
  },
  "icons": {
    "color": "icon-color.png",
    "outline": "icon-outline.png"
  },
  "name": {
    "short": "Corporate Actions Bot",
    "full": "Corporate Actions Collaborative Platform Bot"
  },
  "description": {
    "short": "Real-time corporate actions transparency and collaboration",
    "full": "AI-powered bot for corporate actions data, enabling real-time collaboration, notifications, and intelligent queries for market participants throughout the custody chain."
  },
  "accentColor": "#1f4e79",
  "bots": [
    {
      "botId": "corporate-actions-bot-id",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "Help",
              "description": "Get help with bot commands"
            },
            {
              "title": "Search Events",
              "description": "Search corporate action events"
            },
            {
              "title": "Recent Events",
              "description": "Show recent corporate actions"
            },
            {
              "title": "Subscribe",
              "description": "Subscribe to notifications for specific symbols"
            },
            {
              "title": "Add Comment",
              "description": "Add comment or question to an event"
            }
          ]
        }
      ],
      "isNotificationOnly": false,
      "supportsFiles": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "localhost",
    "*.ngrok.io",
    "corporateactions.azurewebsites.net"
  ],
  "webApplicationInfo": {
    "id": "corporate-actions-bot-id",
    "resource": "https://RscBasedStoreApp"
  }
}
